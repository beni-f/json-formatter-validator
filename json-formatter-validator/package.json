{
  "name": "json-formatter-validator",
  "displayName": "JSON Formatter Validator",
  "description": "Format and validate JSON with precise error reporting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-formatter-validator.format",
        "title": "Format JSON",
        "category": "JSON"
      },
      {
        "command": "json-formatter-validator.validate",
        "title": "Validate JSON",
        "category": "JSON"
      }
    ],
    "keybindings": [
      {
        "command": "json-formatter-validator.format",
        "key": "ctrl+shift+f",
        "when": "editorLangId == json && editorHasSelection == false"
      },
      {
        "command": "json-formatter-validator.validate",
        "key": "ctrl+shift+v",
        "when": "editorLangId == json"
      }
    ],
    "configuration": {
      "title": "JSON Formatter Validator",
      "properties": {
        "json-formatter-validator.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for JSON indentation"
        }
      }
    }
  },
  "json-formatter-validator": {
    "type": "object",
    "properties": {
      "indentSize": {
        "type": "number",
        "default": 2,
        "minimum": 1
      },
      "allowComments": {
        "type": "boolean",
        "default": true
      },
      "allowTrailingComma": {
        "type": "boolean",
        "default": true
      },
      "liveValidation": {
        "type": "boolean",
        "default": true
      },
      "insertTrailingComma": {
        "type": "boolean",
        "default": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "typescript": "^5.9.3"
  }
}
